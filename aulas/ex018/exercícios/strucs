#include <stdint.h>
#include <stdio.h>
#include <string.h>
#include <locale.h>

#define TAM 50

struct conta
{
    int x;
    char user [50];
    char password [50];
};

typedef struct conta conta;

int main(){
    setlocale(LC_ALL, "PT-BR");

    conta lista [TAM];
    char user1 [50];
    char password1 [50];
    int y, z;

    printf("============ CADASTRO NACIONAL PF ============\n\n");
    for (y = 0; y <= 1; y++)
    {
        puts("Digite nome de usuário: \n");
        scanf("%49[^\n]s", lista[y].user);
        fflush(stdin);

        puts("Digite uma senha: \n");
        scanf("%49[^\n]s", lista[y].password);
        fflush(stdin);
    }

    printf("============ ACESSO NACIONAL PF ============\n\n");

    puts("Digite nome de usuário: \n");
    scanf("%49[^\n]s", user1);
    fflush(stdin);
    z = strcmp(lista[0].user, user1);
    if (z == 0)
    {
        printf("Usuário Encontrado\n");
    }
    else
    {
        printf("Usuário Não Encontrado\n");
    }
    
    return 0;
}
